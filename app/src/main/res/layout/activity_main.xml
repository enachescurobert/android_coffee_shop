<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10"
        android:hint="Enter name here"
        android:inputType="textNoSuggestions" />

    <TextView
        android:id="@+id/extraToppings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/customerName"
        android:text="Coffee With Toppings:"
        android:textAllCaps="true"
        android:textSize="23sp"
        android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/oreo_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/extraToppings"
        android:text="Oreo: ($4)"
        android:textAllCaps="true"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_below="@+id/oreo_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/oreoTopping"
        android:orientation="horizontal">



        <Button
            android:id="@+id/decrement_oreo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="decrement_oreo_button"
            android:text="-" />

        <TextView
            android:id="@+id/oreo_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="0"
            android:textSize="23sp"
            android:textStyle="bold" />
        />

        <Button
            android:id="@+id/increment_oreo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="increment_oreo_button"
            android:text="+" />
    </LinearLayout>

    <TextView
        android:id="@+id/kit_kat_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/oreoTopping"
        android:text="Kit Kat: ($4)"
        android:textAllCaps="true"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_below="@+id/kit_kat_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kitKatTopping"
        android:orientation="horizontal">



        <Button
            android:id="@+id/decrement_kit_kat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="decrement_kit_kat_button"
            android:text="-" />

        <TextView
            android:id="@+id/kit_kat_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="0"
            android:textSize="23sp"
            android:textStyle="bold" />
        />

        <Button
            android:id="@+id/increment_kit_kat"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="increment_kit_kat_button"
            android:text="+" />
    </LinearLayout>

    <TextView
        android:id="@+id/both_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/kitKatTopping"
        android:text="Both Toppings: ($5)"
        android:textAllCaps="true"
        android:textSize="19sp" />

    <LinearLayout
        android:layout_below="@+id/both_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bothTopping"
        android:orientation="horizontal">



        <Button
            android:id="@+id/decrement_both"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="decrement_both_button"
            android:text="-" />

        <TextView
            android:id="@+id/both_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="0"
            android:textSize="23sp"
            android:textStyle="bold" />
        />

        <Button
            android:id="@+id/increment_both"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="increment_both_button"
            android:text="+" />
    </LinearLayout>


    <TextView
        android:id="@+id/quantity_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bothTopping"
        android:text="Simple Coffe: ($3)"
        android:textAllCaps="true"
        android:textSize="23sp"
        android:textColor="@color/colorPrimaryDark"/>

    <Button
        android:id="@+id/decrement_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/quantity_view"
        android:onClick="decrement"
        android:text="-" />

    <TextView
        android:id="@+id/quantity_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantity_view"
        android:layout_toRightOf="@+id/decrement_button"
        android:paddingLeft="8dp"
        android:paddingTop="8dp"
        android:paddingRight="8dp"
        android:text="0"
        android:textSize="23sp"
        android:textStyle="bold" />
    />

    <Button
        android:id="@+id/increment_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_below="@+id/quantity_view"
        android:layout_toRightOf="@+id/quantity_text_view"
        android:onClick="increment"
        android:text="+" />


    <TextView
        android:id="@+id/price_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/decrement_button"
        android:text="Total:"
        android:textAllCaps="true"
        android:textSize="23sp"
        android:textColor="@color/colorPrimaryDark"
        />
    />

    <TextView
        android:id="@+id/price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_view"
        android:text="$0"
        android:textSize="23sp"
        android:textStyle="bold" />
    />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/price_text_view"
        >

        <Button
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="submitOrder"
            android:text="Make Bill"
            android:layout_marginRight="20dp"/>

        <Button
            android:id="@+id/sendEmailBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="sendOurOrderByMail"
            android:text="Send Order"
            />

    </LinearLayout>



</RelativeLayout>