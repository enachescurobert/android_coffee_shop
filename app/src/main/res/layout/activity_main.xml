<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F1F1">

    <LinearLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:orientation="vertical"
        tools:context=".ui.MainActivity">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="“Life happens, coffee helps.”"
            android:textSize="30sp"
            android:gravity="center"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:textStyle="italic|bold"
            tools:ignore="HardcodedText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_ll_bring_your_coffee_in_no_time"
            android:textSize="20sp"/>

        <View
            android:layout_marginTop="2dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/just_tell_us_what_you_would_like_to_order"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/quantity_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/simple_coffee_3"
            android:textAllCaps="true"
            android:textColor="#795548"
            android:textSize="25sp"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/incrementSimpleCoffeeBtn"
                    style="@style/ButtonStyle"
                    android:text="+"
                    android:textSize="50sp"
                    tools:ignore="HardcodedText,NestedWeights"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground" />

                <TextView
                    android:id="@+id/simpleTotal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="0"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/decrementSimpleCoffeeBtn"
                    style="@style/ButtonStyle"
                    android:text="-"
                    tools:ignore="HardcodedText,NestedWeights"
                    android:layout_weight="1"
                    android:textSize="50sp"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"
                    />



            </LinearLayout>

            <ImageView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/simple"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/extraToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_with_oreo_4"
            android:textAllCaps="true"
            android:textColor="#795548"
            android:textSize="25sp"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/incrementOreoCoffeeBtn"
                    style="@style/ButtonStyle"
                    android:text="+"
                    android:textSize="50sp"
                    tools:ignore="HardcodedText,NestedWeights"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/oreoTotal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="0"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/decrementOreoCoffeeBtn"
                    style="@style/ButtonStyle"
                    android:text="-"
                    tools:ignore="HardcodedText,NestedWeights"
                    android:layout_weight="1"
                    android:textSize="50sp"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"/>



            </LinearLayout>

            <ImageView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/oreo"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_with_kitkat_4"
            android:textAllCaps="true"
            android:textColor="#795548"
            android:textSize="25sp"
            android:paddingBottom="20dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/incrementKitKatCoffeeBtn"
                    style="@style/ButtonStyle"
                    android:text="+"
                    android:textSize="50sp"
                    tools:ignore="HardcodedText,NestedWeights"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/kitKatTotal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="0"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/decrementKitKatCoffeeBtn"
                    style="@style/ButtonStyle"
                    android:text="-"
                    tools:ignore="HardcodedText,NestedWeights"
                    android:layout_weight="1"
                    android:textSize="50sp"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"/>

            </LinearLayout>

            <ImageView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/kitkat"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/coffee_with_toppings"
            android:textAllCaps="true"
            android:textColor="#795548"
            android:textSize="25sp"
            android:paddingBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:weightSum="3"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <Button
                    android:id="@+id/incrementToppingCoffeeBtn"
                    style="@style/ButtonStyle"
                    android:text="+"
                    android:textSize="50sp"
                    tools:ignore="HardcodedText,NestedWeights"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"/>

                <TextView
                    android:id="@+id/toppingTotal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:text="0"
                    android:textSize="50sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/decrementToppingCoffeeBtn"
                    style="@style/ButtonStyle"
                    android:text="-"
                    tools:ignore="HardcodedText,NestedWeights"
                    android:layout_weight="1"
                    android:textSize="50sp"
                    android:layout_height="0dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="?android:attr/selectableItemBackground"/>



            </LinearLayout>

            <ImageView
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/topping"
                android:layout_gravity="center"/>

        </LinearLayout>

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/order_for"
            android:textSize="30sp"
            />

        <EditText
            android:id="@+id/customerName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_name_here"
            android:inputType="textNoSuggestions"
            android:importantForAutofill="no" />

        <EditText
            android:lines="3"
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/enter_address_here"
            android:inputType="textMultiLine"
            android:importantForAutofill="no" />

        <View
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>


        <TextView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textAllCaps="true"
            android:textColor="#795548"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/makeBillBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:text="@string/make_bill"
                tools:ignore="ButtonStyle" />

            <Button
                android:id="@+id/sendEmailBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/send_order"
                tools:ignore="ButtonStyle"
                android:enabled="false"/>

        </LinearLayout>


    </LinearLayout>

</ScrollView>