<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <EditText
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="@string/enter_name_here"
            android:inputType="textNoSuggestions" />

        <TextView
            android:id="@+id/extraToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/customerName"
            android:text="@string/coffee_with_toppings"
            android:textAllCaps="true"
            android:textColor="#795548"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/oreo_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/extraToppings"
            android:text="@string/oreo_4"
            android:textAllCaps="true"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/oreoTopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oreo_text_view"
            android:orientation="horizontal">


            <Button
                android:id="@+id/decrement_oreo"
                style="@style/ButtonStyle"
                android:onClick="decrement_oreo_button"
                android:text="-" />

            <TextView
                android:id="@+id/oreo_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/increment_oreo"
                style="@style/ButtonStyle"
                android:onClick="increment_oreo_button"
                android:text="+" />
        </LinearLayout>

        <TextView
            android:id="@+id/kit_kat_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/oreoTopping"
            android:text="@string/kit_kat_4"
            android:textAllCaps="true"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/kitKatTopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kit_kat_text_view"
            android:orientation="horizontal">


            <Button
                android:id="@+id/decrement_kit_kat"
                style="@style/ButtonStyle"
                android:onClick="decrement_kit_kat_button"
                android:text="-" />

            <TextView
                android:id="@+id/kit_kat_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:textSize="23sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/increment_kit_kat"
                style="@style/ButtonStyle"
                android:onClick="increment_kit_kat_button"
                android:text="+" />
        </LinearLayout>

        <TextView
            android:id="@+id/both_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kitKatTopping"
            android:text="@string/both_toppings_5"
            android:textAllCaps="true"
            android:textSize="19sp" />

        <LinearLayout
            android:id="@+id/bothTopping"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/both_text_view"
            android:orientation="horizontal">


            <Button
                android:id="@+id/decrement_both"
                style="@style/ButtonStyle"
                android:onClick="decrement_both_button"
                android:text="-" />

            <TextView
                android:id="@+id/both_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:paddingTop="8dp"
                android:paddingRight="8dp"
                android:text="0"
                android:textSize="23sp"
                android:textStyle="bold" />
            />

            <Button
                android:id="@+id/increment_both"
                style="@style/ButtonStyle"
                android:onClick="increment_both_button"
                android:text="+" />
        </LinearLayout>


        <TextView
            android:id="@+id/quantity_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bothTopping"
            android:text="@string/simple_coffee_3"
            android:textAllCaps="true"
            android:textColor="#795548"
            android:textSize="23sp" />

        <Button
            android:id="@+id/decrement_button"
            style="@style/ButtonStyle"
            android:layout_below="@+id/quantity_view"
            android:onClick="decrement"
            android:text="-" />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/quantity_view"
            android:layout_toRightOf="@+id/decrement_button"
            android:paddingLeft="8dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:text="0"
            android:textSize="23sp"
            android:textStyle="bold" />
        />

        <Button
            android:id="@+id/increment_button"
            style="@style/ButtonStyle"
            android:layout_below="@+id/quantity_view"
            android:layout_toRightOf="@+id/quantity_text_view"
            android:onClick="increment"
            android:text="+" />


        <TextView
            android:id="@+id/price_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/decrement_button"
            android:text="@string/total"
            android:textAllCaps="true"
            android:textColor="#795548"
            android:textSize="23sp" />
        />

        <TextView
            android:id="@+id/price_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_view"
            android:text="@string/_0"
            android:textSize="23sp"
            android:textStyle="bold" />
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/price_text_view"
            android:orientation="horizontal">

            <Button
                android:id="@+id/order_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:onClick="submitOrder"
                android:text="@string/make_bill" />

            <Button
                android:id="@+id/sendEmailBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="sendOurOrderByMail"
                android:text="@string/send_order" />

        </LinearLayout>


    </RelativeLayout>

</ScrollView>